<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bgi.esm.monitoring.platform.notifications.NotificationBean" table="notifications" >
        <id name="NotificationID" column="notification_id">
            <generator class="native" />
        </id>
        <property name="SuppressionID"         type="long"     column="suppress_id"            />
        <property name="NotificationTarget"    type="text"     column="notification_target"    />
        <property name="NotificationTimestamp" type="calendar" column="notification_timestamp" />
    </class>
</hibernate-mapping>

